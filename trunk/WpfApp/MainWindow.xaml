<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tao="clr-namespace:Tao.Platform.Windows;assembly=Tao.Platform.Windows"
        Title="MainWindow" Height="350" Width="525" SizeChanged="Window_SizeChanged">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <WindowsFormsHost Grid.Row="0" ClipToBounds="True">
            <tao:SimpleOpenGlControl x:Name="openGLControl" />
        </WindowsFormsHost>
        <Button Grid.Row="1" Content="Push Buttan" Foreground="OrangeRed" FontSize="26">
            <Button.Background>
                <RadialGradientBrush>
                    <GradientStop Color="Blue" Offset="0.30"/>
                    <GradientStop Color="Yellow" Offset="0.50"/>
                    <GradientStop Color="Green" Offset="0.70"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
